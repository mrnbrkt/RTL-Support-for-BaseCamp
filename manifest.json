{
  "name": "BaseCamp Right-To-Left",
  "version": "0.13",
  "description": "An extension allowing to work in BaseCamp with RTL languages such as Hebrew, Arabic, etc",
  "permissions": [
    "contextMenus"
  ],
   "content_scripts": [
    {
      "matches": ["https://*.basecamphq.com/*"],
	  "js": ["jquery-1.7.min.js", "contentscript.js"]
    }
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "background_page": "background.html"
}